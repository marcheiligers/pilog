<%= render partial: "header" %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Timestamp</th>
        <th>Content</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.id %></td>
        <td><%= log.created_at.to_s(:db) %></td>
        <td><%= log.content.truncate(50) %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @logs, theme: 'twitter-bootstrap-3' %>

<br>

<%= link_to 'New Log', new_log_path %>
