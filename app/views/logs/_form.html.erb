<%= form_for(log, html: { class: "form-horizontal" }) do |f| %>
  <% if log.errors.any? %>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%= pluralize(log.errors.count, "error") %> prohibited this log from being saved:</strong>
      <%= log.errors.full_messages.to_sentence %>
    </div>
  <% end %>

  <div class="form-group">
    <label for="logId" class="col-sm-2 control-label">Id</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="logId" placeholder="Id" readonly value="<%= log.id %>">
    </div>
  </div>

  <div class="form-group">
    <label for="logTimestamp" class="col-sm-2 control-label">Timestamp</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="logTimestamp" placeholder="Timestamp" readonly value="<%= log.created_at.try(:to_s, :db) %>">
    </div>
  </div>

  <div class="form-group">
    <label for="logContent" class="col-sm-2 control-label">Content</label>
    <div class="col-sm-10">
      <textarea type="text" class="form-control" name="log[content]" id="logContent" rows="10" placeholder="Content" <%= "readonly" if readonly %>><%= log.content %></textarea>
    </div>
  </div>

  <% unless readonly %>
  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
  <% end %>
<% end %>
